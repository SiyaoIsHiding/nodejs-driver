{
	"compilerOptions": {
	  "module": "NodeNext",
	  "lib": ["es2015"],
	  "target": "es2015",
	  "sourceMap": true,
	  "strict": false,
	  "noImplicitAny": false,
	  "outDir": "out",
	  "declaration": true,
	  "allowJs": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "declarationMap": true,
	  "moduleDetection": "force",
	  "resolveJsonModule": true,
	  "moduleResolution": "nodenext"
	},
	"include": [
		"lib/**/*.ts",
		"test/**/*.ts",
		"index.ts"
	],
	"exclude": [
	  "node_modules",
	  "out"
	]
  }