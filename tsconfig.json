{
    "compilerOptions": {
      "module": "commonjs",
      "lib": ["es2015"],
      "target": "es2015",
      "sourceMap": true,
      "strict": false,
      "noImplicitAny": false,
      "outDir": "out",
      "declaration": true,
      "allowJs": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "checkJs": true,
      "declarationMap": true
    },
    "include": [
        "lib/**/*.ts",
        "index.js",
        "indes.d.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }